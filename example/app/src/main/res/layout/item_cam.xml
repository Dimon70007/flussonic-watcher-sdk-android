<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_app_color">

    <!--ImageView
        android:id="@+id/img_cam"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_camera"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"/-->

    <flussonic.watcher.sdk.presentation.thumbnail.FlussonicThumbnailView
        android:id="@+id/camera_preview"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/name_cam"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="16dp"
        android:textColor="@color/text_color_black"
        android:text="Камера 1"
        android:layout_toRightOf="@+id/camera_preview"
        android:layout_toLeftOf="@+id/cam_status"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/cam_status"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="16dp"
        android:textColor="@color/cam_online"
        android:text="@string/cam_online"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:gravity="center"/>

</RelativeLayout>